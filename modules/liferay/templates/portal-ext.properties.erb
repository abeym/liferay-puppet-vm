#
# DB Conf
#
jdbc.default.jndi.name=
jdbc.default.driverClassName=<%=@driverClassName%>
jdbc.default.url=<%=@db_url%>
jdbc.default.username=<%=@db_user%>
jdbc.default.password=<%=@db_password%>

#this turns off an annoying message. You want this line.
plugin.notifications.enabled=false

#this is pretty self explanatory if you know what captcha is
captcha.max.challenges=0

browser.launcher.url=

#reindexes stuff when you startup Liferay
index.on.startup=true

mail.session.jndi.name=

axis.servlet.hosts.allowed=

tunnel.servlet.hosts.allowed=

#Telling Liferay that it is working behind Apache HTTPd
#web.server.http.port=80
#web.server.https.port=443

#this sets your home directory, which locally stores your data and deploy folders
liferay.home=<%=@liferay_home%>

auto.deploy.deploy.dir=<%=@liferay_deploy_dir%>

#Configuring smtp
mail.session.mail.smtp.port=<%=@mail_server_port%>

#ImageMagicK
imagemagick.enabled=<%=@external_tools%>
imagemagick.global.search.path[unix]=/usr/bin/:/usr/share/ghostscript/fonts

#OpenOffice
openoffice.server.enabled=<%=@external_tools%>

#Xuggler
xuggler.enabled=<%=@external_tools%>

# disable default startup config
#we should not get 'Change password' screen.
passwords.default.policy.change.required=false
# To turn off the terms and conditions
terms.of.use.required=false
# deactivate the wizard for fresh installation
setup.wizard.enabled=false
#
# Set this to true to enable reminder queries that are used to help reset a
# user's password.
#
users.reminder.queries.enabled=false
